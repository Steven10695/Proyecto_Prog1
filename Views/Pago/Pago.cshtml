@model Huerto_Del_valle.Models.Pago
@{
    ViewData["Title"] = "Finaliza tu Compra";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>
<body style="background-color: #fff;">  
<div class="text-center" style="margin-top: 50px;">
    <h1 class="p-3 mb-2 bg-info text-white" class="display-4">Detalles de Facturación:</h1>
</div>

<div  class="container">

<div asp-validation-summary="All"></div>

<form action="" method="post">  
    
  <div class="form-group">
    <label for="">Nombre </label>
    <input type="text" asp-for="nombre" class="form-control" id=""  placeholder="Ingrese su nombre">
  </div>

  <div class="form-group">
    <label for="">Apellidos (Opcional) </label>
    <input type="text" asp-for="apellidos" class="form-control" id=""  placeholder="Ingrese sus apellidos">
  </div>

  <div class="form-group">
    <label for="">DNI</label>
    <input type="text" asp-for="dni" class="form-control" id=""  placeholder="Ingrese su DNI">
  </div>

  <div class="form-group">
    <label for="">Teléfono </label>
    <input type="text" asp-for="telefono" class="form-control" id=""  placeholder="Ingrese su teléfono">
  </div>

  <div class="form-group">
    <label for="">Dirección de correo electrónico</label>
    <input type="text" asp-for="correo" class="form-control" id=""  placeholder="Ingrese su correo electrónico">
  </div>

  <div class="form-group">
    <label for="">Distrito </label>
    <input type="text" asp-for="distrito" class="form-control" id=""  placeholder="Ingrese su distrito">
  </div>

  <div class="form-group">
    <label for="">Dirección</label>
    <input type="text" asp-for="direccion" class="form-control" id=""  placeholder="Ingrese la dirección de entrega">
  </div>

  <div class="form-group">
    <label for="">Referencia:</label>
    <input type="text" asp-for="referencia" class="form-control" id=""  placeholder="Ingrese la referencia de su domicilio">
  </div>

  <div class="form-group">
    <label for="">Número de Tarjeta </label>
    <input type="text" asp-for="tarjeta" class="form-control" id=""  placeholder="Ingrese el número de su tarjeta">
  </div>

  <div class="form-group">
    <label for="">Fecha de Vencimiento </label>
    <input type="text" asp-for="vence" class="form-control" id=""  placeholder="Ingrese la fecha de vencimiento">
  </div>

  <div class="form-group">
    <label for="">Código de Seguridad</label>
    <input type="text" asp-for="codigo" class="form-control" id=""  placeholder="Ingrese el código de seguridad de su tarjeta">
  </div>

  <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-outline-danger">Realizar Pedido</button>
  </div>
  
</form>

</div>
</body>