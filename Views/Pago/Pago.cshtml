@model Huerto_Del_valle.Models.Pago
@{
    ViewData["Title"] = "Finaliza tu Compra";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>
<body style="background-image: url(../img/nuts.jpg);">  

    <div class="row" style="justify-content: center;">
        <div class="align-center" style="background-color: rgba(0,0,0, 0.4); border-radius: 30px; border: solid #fff;">
            <div style="margin-top: 50px;">
                    <h1 style="font-size: 35px; margin-left: 20px; color: #fff; text-align:center;">Detalles de Facturación</h1>
            </div>
            <section>
                <form method="post" style="padding: 20px; color: #fff">
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label>Nombre <span class="text-danger">*</span></label>
                            <input type="text" asp-for="nombre" class="form-control" placeholder="Ingrese su nombre" style="border-radius:30px;">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Apellido (Opcional) <span class="text-danger">*</span></label>
                            <input type="text" asp-for="apellido" class="form-control" placeholder="Ingrese su apellido" style="border-radius:30px;">
                        </div>
                    </div>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label>DNI <span class="text-danger">*</span></label>
                            <input type="text" asp-for="dni" class="form-control" placeholder="Ingrese su DNI" style="border-radius:30px;">
                        </div>
                        <div class="form-group col-md-6">
                            <label style="color: #fff">Teléfono <span class="text-danger">*</span></label>
                            <input type="text" asp-for="telefono" class="form-control" placeholder="Ingrese su teléfono" style="border-radius:30px;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="color: #fff">Dirección de correo electrónico <span class="text-danger">*</span></label>
                        <input type="text" asp-for="correo" class="form-control" id=""  placeholder="Ingrese su correo electrónico" style="border-radius:30px;">
                    </div>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                                <label>Región/Provincia <span class="text-danger">*</span></label>
                                <input type="text" asp-for="region" class="form-control" placeholder="Ingrese su región" style="border-radius:30px;">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Ciudad <span class="text-danger">*</span></label>
                                <input type="text" asp-for="ciudad" class="form-control" placeholder="Ingrese su ciudad" style="border-radius:30px;">
                            </div>
                        </div>
                    <div class="form-group">
                        <label for="">Dirección <span class="text-danger">*</span></label>
                        <input type="text" asp-for="direccion" class="form-control" id=""  placeholder="Ingrese la dirección de entrega" style="border-radius:30px;">
                    </div>

                    <div class="form-group">
                        <label for="">Referencia <span class="text-danger">*</span></label>
                        <input type="text" asp-for="referencia" class="form-control" id=""  placeholder="Ingrese la referencia de su domicilio" style="border-radius:30px;">
                    </div>
                    <div class="form-group">
                            <label for="">Número de Tarjeta <span class="text-danger">*</span></label>
                            <input type="text" asp-for="tarjeta" class="form-control" id=""  placeholder="Ingrese el número de su tarjeta" style="border-radius:30px;">
                    </div>
                    <div class="form-row mb-3">
                            <div class="form-group col-md-6">
                                <label for="">Fecha de Vencimiento <span class="text-danger">*</span></label>
                                <input type="text" asp-for="vence" class="form-control" id=""  placeholder="Ingrese la fecha de vencimiento" style="border-radius:30px;">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">Código de Seguridad <span class="text-danger">*</span></label>
                                <input type="text" asp-for="codigo" class="form-control" id=""  placeholder="Ingrese el código de seguridad de su tarjeta" style="border-radius:30px;">
                            </div>
                    </div>
                        <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
                            <button type="submit" class="btn btn-outline-danger" style="position: relative; display: inline-block; padding: 15px 30px; color: white; letter-spacing: 4px; fot-size: 24px; overflow: hidden; transition: 0.2s;">
                                <span id="span1" style="position: absolute; display: block; top: 0; left: -100%; width: 100%; height: 2px; background: linear-gradient(90deg,transparent,#945c7);"></span>
                                <span id="span2" style="position: absolute; display: block; top: 0; left: -100%; width: 100%; height: 2px; background: linear-gradient(90deg,transparent,#945c7);"></span>
                                <span id="span3" style="position: absolute; display: block; top: 0; left: -100%; width: 100%; height: 2px; background: linear-gradient(90deg,transparent,#945c7);"></span>
                                <span id="span4" style="position: absolute; display: block; top: 0; left: -100%; width: 100%; height: 2px; background: linear-gradient(90deg,transparent,#945c7);"></span>
                                <b>Realizar Pedido</b></button>
                    </div>
                </form>
            </section>
        </div>
        
    </div>
</body>