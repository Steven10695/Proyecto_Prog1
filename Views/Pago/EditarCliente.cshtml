@model Huerto_Del_valle.Models.Pago
<body style="background-color: #fff;">  
<div class="text-center" style="margin-top: 50px;">
    <h1 class="p-3 mb-2 bg-info text-white" class="display-4">Editar Cliente</h1>
</div>

<div  class="container">

<div asp-validation-summary="All"></div>

<form asp-action="EditarCliente" method="POST">  
    <input type ="hidden" asp-for="id"/>
  <div class="form-group">
    <label for="">Nombre del cliente:</label>
    <input type="text" asp-for="nombre" class="form-control"   placeholder="Ingrese Nombre">
  </div>

  <div class="form-group">
    <label for="">Apellido del cliente:</label>
    <input type="text" asp-for="apellido" class="form-control"   placeholder="Ingrese Apellido">
  </div>

  <div class="form-group">
    <label for="">DNI del cliente:</label>
    <input type="text" asp-for="dni" class="form-control"   placeholder="Ingrese DNI">
  </div>

  <div class="form-group">
    <label for="">Teléfono del cliente:</label>
    <input type="text" asp-for="telefono" class="form-control"   placeholder="Ingrese teléfono">
    
  </div>


  <div class="form-group">
    <label for="">Correo del cliente: </label>
    <input type="text" asp-for="correo" class="form-control"   placeholder="Ingrese Correo">
  </div>

  <div class="form-group">
    <label for="">Región del cliente: </label>
    <input type="text" asp-for="region" class="form-control"  placeholder="Ingrese Región">
  </div>
  <div class="form-group">
    <label for="">Ciudad del cliente: </label>
    <input type="text" asp-for="ciudad" class="form-control"   placeholder="Ingrese Ciudad">
  </div>
  <div class="form-group">
    <label for="">Dirección del cliente: </label>
    <input type="text" asp-for="direccion" class="form-control"   placeholder="Ingrese tipo Dirección">
  </div>
  <div class="form-group">
    <label for="">Referencia del domicilio: </label>
    <input type="text" asp-for="referencia" class="form-control"   placeholder="Ingrese Referencia">
  </div>

  <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-outline-primary">Editar</button>
  </div>
  
</form>
</div>
</body>