@Model SendMailDto
@{
  ViewData["Title"] = "Contacto";
}

<h1>@ViewBag.Mensaje</h1>

<form action="" method="POST">
            <div class="form-group">
              <label asp-for="@Model.Nombre"></label>
              <input type="text" asp-for="@Model.Nombre" class="form-control" placeholder="Ingresa tu nombre">
              <span class="text-danger" asp-validation-for="@Model.Nombre"></span>
            </div>
            <div class="form-group">
              <label asp-for="@Model.Mail"></label>
              <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Ingresa tu Email">
              <span class="text-danger" asp-validation-for="@Model.Mail"></span>
            </div>
            <div class="form-group">
              <label asp-for="@Model.Subject"></label>
              <input type="email" asp-for="@Model.Subject" class="form-control" placeholder="Ingresa tu Asunto">
              <span class="text-danger" asp-validation-for="@Model.Subject"></span>
            </div>
            <div class="form-group">
              <label asp-for="@Model.Mensaje"></label>
              <textarea class="form-control" asp-for="@Model.Mensaje" placeholder="Ingresa tu Mensaje"></textarea>
              <span class="text-danger" asp-validation-for="@Model.Mensaje"></span>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>