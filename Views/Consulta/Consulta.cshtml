@model Huerto_Del_valle.Models.Consulta
<body style="background-color: #fff;">  
<div class="text-center" style="margin-top: 50px;">
    <h1 class="p-3 mb-2 bg-info text-white" class="display-4">Agregar Consulta:</h1>
</div>

<div  class="container">

<div asp-validation-summary="All"></div>

<form action="" method="post">  
    
  <div class="form-group">
    <label for="">Nombre: </label>
    <input type="text" asp-for="nombre" class="form-control" id=""  placeholder="Ingrese su nombre">
  </div>

  <div class="form-group">
    <label for="">Correo:</label>
    <input type="text" asp-for="correo" class="form-control" id=""  placeholder="Ingrese su correo">
  </div>

  <div class="form-group">
    <label for="">Descripción de la Consulta:</label>
    <input type="text" asp-for="descripcion" class="form-control" id=""  placeholder="Ingrese la descripción">
  </div>

  <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-dark">Enviar</button>
  </div>
  
</form>
</div>
</body>