@model Huerto_Del_valle.Models.Reclamo
@{
    ViewData["Title"] = "Reclamos";
}
<body style="background-image: url(../img/Reclamo.jpg); background-position: center center; background-repeat: no-repeat; background-attachment: fixed; background-size: cover; background-color: #66999;">  
<div class="text-center" style="margin-top: 50px;">
    <h1 class="p-3 mb-2 bg-info text-white" class="display-4">Agregar Reclamo:</h1>
</div>

<div  class="container">

<div asp-validation-summary="All"></div>

<form action="" method="post" style="font-size: 20px;">  

  <div class="form-group">
    <label for=""><b>Nombre:</b></label>
    <input type="text" asp-for="nombre" class="form-control" id=""  placeholder="Ingrese su nombre">
  </div>

  <div class="form-group">
    <label for=""><b>Teléfono:</b></label>
    <input type="text" asp-for="telefono" class="form-control" id=""  placeholder="Ingrese su teléfono">
  </div>

  <div class="form-group">
    <label for=""><b>Asunto:</b></label>
    <input type="text" asp-for="asunto" class="form-control" id=""  placeholder="Ingrese el asunto de su reclamo">
  </div>

  <div class="form-group">
    <label for=""><b>Descripción del Reclamo:</b></label>
    <input type="text" asp-for="descripcion" class="form-control" id=""  placeholder="Ingrese la descripción">
  </div>

  <div style="text-align: center; margin-top: 15px; margin-bottom: 15px;">
            <button type="submit" class="btn btn-outline-danger">Enviar</button>
  </div>
  
</form>
</div>
</body>